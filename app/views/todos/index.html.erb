

  <h1>My To-do List</h1>
  <%= form_with(url: "/todos", method: "post") do %>
    <%= text_field_tag("todo_text", nil, placeholder: "What's next?") %>
    <%= date_field_tag("due_date") %>
    <%= submit_tag "Add", class: "form_submit" %>
  <% end %>

  <%= render partial: "todos-section", locals: { section_title: "Overdue", todos: Todo.overdue.uncompleted, show_due_date: true } %>
  <%= render partial: "todos-section", locals: { section_title: "Due Today", todos: Todo.due_today, show_due_date: false } %>
  <%= render partial: "todos-section", locals: { section_title: "Due Later", todos: Todo.due_later, show_due_date: true } %>
